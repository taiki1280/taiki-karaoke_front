// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
    "name": "karaoke-front-devcontainer",
    "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
    "features": {
        "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
            "plugins": "npm",
            "omzPlugins": "https://github.com/zsh-users/zsh-autosuggestions",
            "username": "node"
        }
    },
    // Features to add to the dev container. More info: https://containers.dev/features.
    // "features": {},
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [],
    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "yarn install",
    // Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "extensions": [
                "mhutchie.git-graph",
                "humao.rest-client",
                "Gruntfuggly.todo-tree",
                "streetsidesoftware.code-spell-checker",
                "esbenp.prettier-vscode"
            ],
            "settings": {
                "files.autoSave": "afterDelay",
                "editor.formatOnSave": true,
                "editor.formatOnPaste": true,
                "prettier.jsxSingleQuote": true,
                "prettier.printWidth": 120,
                "prettier.semi": false,
                "prettier.singleQuote": true,
                "editor.tabSize": 4,
                "workbench.colorCustomizations": {
                    // タイトルバーの背景色
                    "titleBar.activeBackground": "#68A063",
                    "titleBar.inactiveBackground": "#68A063",
                    // タイトルバーの文字色
                    "titleBar.activeForeground": "#303030",
                    "statusBar.background": "#3C873A",
                    "statusBar.foreground": "#303030"
                },
                "cSpell.words": [
                    "devcontainer",
                    "devcontainers",
                    // extension creator's name
                    "mhutchie",
                    "humao",
                    "Gruntfuggly",
                    "esbenp",
                    "TTFB",
                    // application developer name
                    "taiki",
                    // application specific words
                    "precache",
                    "precached",
                    "precaching",
                    "denmoku",
                    "kobushi",
                    "shakuri",
                    "longtone"
                ]
            }
        }
    }
    // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
    // "remoteUser": "root"
}
